{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "compilerOptions": {
    "deleteOutDir": true,
    "webpack": true,
    "assets": [
      { "include": "../config/*", "outDir": "./dist/config" },
      { "include": "../assets/*", "outDir": "./dist/assets" }
    ]
  }
}
